#!ipxe

# Antergos Operating System
# https://antergos.com

goto ${menu}

:antergos
set os Antergos
set antergos_version 2016.09.03
menu ${os} Installers
item x86_64 ${space} ${os} ${antergos_version} Minimal 64bit [ISO]
item i686 ${space} ${os} ${antergos_version} Minimal 32bit [ISO]
choose antergos_arch || goto antergos_exit
goto antergos_boot

:antergos_boot
kernel ${memdisk} iso raw
initrd http://wynsrv.antergos.info/iso/release/antergos-minimal-${antergos_version}-${antergos_arch}.iso
boot
goto antergos_exit

:antergos_exit
clear menu
exit 0
